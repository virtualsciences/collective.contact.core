<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      tal:define="portal_url context/@@plone_portal_state/portal_url;"
      i18n:domain="collective.contact.core" tal:omit-tag="">

    <metal:block tal:condition="view/held_positions"
                 tal:define="organizations python:[]">
      <dd tal:repeat="held_position view/held_positions">
        <tal:block tal:define="organization nocall:held_position/organization"
                   tal:condition="python:organization not in organizations">
          <a tal:attributes="href organization/absolute_url"
             tal:define="dummy python:organizations.append(organization)">
            <metal:block tal:condition="organization/logo">
              <img tal:define="scales nocall:organization/@@images"
                  tal:replace="structure python:scales.tag('logo', width=64, height=64, css_class='profile', direction='down')"
                  tal:on-error="string:Bad logo format" />
            </metal:block>
            <img tal:condition="not:organization/logo|nothing"
                tal:attributes="src string:${context/portal_url}/photo-fallback-70.png" class="flle profile" width="64" height="64" />
            <tal:text tal:replace="organization/Title"/>
          </a>
        </tal:block>
      </dd>
    </metal:block>

</html>
