<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      tal:define="portal_url context/@@plone_portal_state/portal_url;"
      i18n:domain="collective.contact.core" tal:omit-tag="">


  <dd tal:condition="view/othercontacts">
    <tal:block tal:repeat="contact view/othercontacts">
        <a tal:attributes="href contact/obj/absolute_url;"
            tal:define="has_photo contact/obj/photo|nothing;
            title contact/title">
                <span class="contact-photo">
                  <metal:block tal:condition="has_photo">
                    <img tal:define="scales contact/obj/@@images"
                         tal:replace="structure python:scales.tag('photo', width=30, height=30, css_class='profile', direction='down')"
                         tal:on-error="string:Bad photo format" />
                  </metal:block>
                  <img tal:condition="not:has_photo"
                       tal:attributes="src string:${context/portal_url}/photo-fallback-70.png" class="flle profile" width="64" height="64" />
                </span>
        </a>
    </tal:block>
  </dd>
  <dd tal:condition="not:view/othercontacts">
    No employees found for this company
  </dd>

</html>
